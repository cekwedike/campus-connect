# Environment Variables for CampusConnect
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://postgres:YourStrongPassword123!@localhost:5432/campusconnect
DB_NAME=campusconnect
DB_USERNAME=postgres
DB_PASSWORD=YourStrongPassword123!

# Backend Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
ENVIRONMENT=development
CORS_ORIGINS=http://localhost:3000

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000

# Azure Configuration (for production)
AZURE_LOCATION=West US 2
AZURE_RESOURCE_GROUP=campus-connect-rg
AZURE_ACR_NAME=campusconnect2024acr

# Production Database (Azure)
AZURE_DB_PASSWORD=YourStrongPassword123!
AZURE_DB_URL=postgresql://postgres:YourStrongPassword123!@campus-connect-postgres.postgres.database.azure.com:5432/campusconnect

# IMPORTANT: Change all passwords to strong, unique passwords before deploying! 